<section>
  <!-- _______________________________________________________________________________________________________________________ -->

  <!-- IF ITEM IS SELECTED THAN -->
  <% if(session.cart){%>
  <div class="order container mx-auto items-center">
    <!-- image and page summsry written section -->
    <div
      class="order container w-3/5 flex mx-auto p-6 items-center border-b border-gray-300"
    >
      <img src="/img/filled_cart.png" alt="filled_cart-photo" />
      <h1 class="font-bold text-xl pl-6">Order Summary</h1>
    </div>

    <!-- FIRST ORDERED ITEM -->
    
      <div
        class="pizza-list flex flex-col items-center content-center"
        name="2321"
      >
        <% for (let pizza of Object.values(session.cart.items)) { %>
        <div
          class="flex items-center p-6 border-b border-gray-300 w-3/5"
          name="456"
        >
          <img
            src="/img/<%= pizza.items.image %>"
            alt="product_pic"
            class="w-36"
          />
          <div class="name_size pb-2 ml-4 flex-1">
            <h1 class="font-bold text-xl"><%= pizza.items.name %></h1>
            <span><%= pizza.items.size %></span>
          </div>
          <span class="flex-1 font-bold text-xl"><%= pizza.qty %> pcs</span>
          <span class="font-bold text-xl"
            >₹ <%= pizza.items.price * pizza.qty %></span
          >
        </div>
      </div>
    </div>
  
  <%}%>

  <!-- SECOUND ORDERED ITEM -->

  <!-- END OF ITEM LIST -->

  <!-- PRICING STARTS FROM HEAR
    <div class="text-center w-3/5 py-4">
      <div class="flex items-center">
        <span class="font-bold text-2xl mr-4">Total Amount:</span>
        <span class="font-bold text-2xl text_color">₹249</span>
      </div>
    </div> -->

  <!-- END OF "IF ITEM IS SELECTED THAN" section after order which is working fine -->

  <div class="text-right py-4 mx-auto w-3/5">
    <div class="flex items-center justify-end">
      <span class="font-bold text-2xl mr-4">Total Amount:</span>
      <span class="font-bold text-2xl text_color"
        >₹ <%= session.cart.totalPrice %></span
      >
    </div>
    <div>
      <form action="#" method="post">
        <input
          type="text"
          class="border border-gray-500 mt-4 mb-4 w-1/2 p-2 rounded-full"
          placeholder="Phone Number"
        />

        <input
          type="text"
          class="border border-gray-500 mb-4 w-1/2 p-2 rounded-full"
          placeholder="Address"
        />

        <div>
          <!-- <button class="button_design"><em>Order Now</em></button>   -->
          <!-- Order Now button -->
        </div>
      </form>
      <!-- Login To Continue -->
      <a href="/login" class="inline-block cursor-pointer button_design"
        >Login To Continue</a
      >
    </div>
  </div>

  <%} else {%>

  <!-- PRICING STARTS FROM HEAR -->

  <!-- ______________________________________________________________________________________________________________________________ -->

  <!-- EMPTY CART PAGE -->

  <div class="empty-cart">
    <div class="container mx-auto text-center">
      <h1 class="text-xl mt-5 mb-2 font-bold">Cart is Empty</h1>
      <h2 class="text-xl mb-2">
        To Order Pizza<br />
        Go To Home Page.
      </h2>
      <img
        src="/img/real_pizza1.png"
        alt="empty-cart image"
        class="w-1/4 mx-auto mt-2 mb-2"
      />
      <a href="/" class="inline-block px-6 py-2 rounded-full button_design">
        Go Back</a
      >
    </div>
  </div>

  <!-- _______________________________________________________________________________________________________________________ -->

  <%}%>
</section>
